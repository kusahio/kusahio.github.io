---
import "@/styles/global.css";
import Navbar from "@/components/Navbar.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="description" content="Camilo Illanes - Full Stack Developer" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Archivo+Black&family=Inter:wght@400;600;800&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://tu-dominio.com/" />
    <meta property="og:title" content={title} />
    <meta
      property="og:description"
      content="Desarrollador Full Stack enfocado en React, Next.js y Python."
    />
    <meta property="og:image" content="/og-image.jpg" />
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:title" content={title} />
    <meta
      property="twitter:description"
      content="Desarrollador Full Stack enfocado en React, Next.js y Python."
    />
    <meta property="twitter:image" content="/og-image.jpg" />
  </head>
  <body
    class="bg-brand-bg text-brand-black font-body selection:bg-brand-yellow"
  > 
    <Navbar />
    <slot />
  </body>
</html>
