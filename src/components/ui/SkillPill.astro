---
import IconComponent from "@/components/ui/Icons";

interface Props {
  name: string;
  icon: string;
  index: number;
}

const { name, icon, index } = Astro.props;
const rotationClass = index % 2 === 0 ? "-rotate-2" : "rotate-2";
---

<div class={`
    flex flex-row items-center gap-2 cursor-default bg-white border-4 border-brand-black px-4 py-2
    md:hover:shadow-[4px_4px_0px_0px_var(--color-brand-black)] transition-all 
    duration-200 hover:-translate-y-1 ${rotationClass}`}
>
  <IconComponent icon={icon} />
  <span class="font-display font-black text-lg md:text-xl text-brand-black uppercase select-none">
    {name}
  </span>
</div>