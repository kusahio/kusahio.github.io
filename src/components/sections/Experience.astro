---
import { CV } from "@/data/cv";

const { experience } = CV;
---

<section id="experience"
  class="w-full flex justify-center px-6 md:px-12 lg:px-24 py-16 md:py-24 overflow-hidden bg-brand-bg"
>
  <div class="w-full max-w-7xl flex flex-col gap-16">
    <h2 class="text-center md:text-left font-display text-4xl md:text-5xl uppercase text-brand-black">
      {experience.title}
    </h2>
    <div class="w-full flex flex-col">
      {
        experience.jobs.map((job, i) => (
          <div class="w-full flex flex-col md:flex-row md:justify-start border-b-4 border-brand-black py-6 gap-6">
            <div class="text-5xl text-brand-red font-display">
              {Math.abs(1) < 10 ? `0${i + 1}` : i + 1}
            </div>
            <div class="flex flex-col">
              <h3 class="text-3xl font-black">{job.role}</h3>
              <h4 class="text-lg font-semibold text-gray-600">{job.company}</h4>
              {job.summary && (<p class="font-medium text-sm mt-2 list-disc">{job.summary}</p>)}
              
            </div>
            <div class="md:ml-auto shrink-0">
              <div class="flex justify-center font-display text-sm md:text-base border-2 border-brand-black px-3 py-1 bg-white shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] -rotate-1">
                {job.period}
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
