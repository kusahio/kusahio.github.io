---
import { CV } from "@/data/cv";
import IconComponent from "@/components/ui/Icons"

const { skills } = CV;
---

<section
  class="w-full flex justify-center px-6 md:px-12 lg:px-24 py-16 md:py-24 overflow-hidden bg-brand-yellow"
>
  <div class="w-full max-w-7xl flex flex-col gap-8">
    <h2 class="text-center md:text-left font-display text-4xl md:text-5xl uppercase text-brand-black">{skills.title}</h2>
    <div class="w-full flex flex-row justify-center md:justify-start flex-wrap py-4 gap-6">
      {skills.skillSet.map((skill, i) => {
        return (
          <div class={`flex flex-row items-center gap-1 cursor-pointer bg-white border-4 border-brand-black px-4 py-2
          md:hover:shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] transition-all duration-200 ${i % 2 == 0 ? '-rotate-2' : 'rotate-2'}`}>
          <IconComponent icon={skill.icon}/>
          <span class="font-black text-lg md:text-2xl text-brand-black">
            {skill.name}
          </span>
        </div>
        )
      })}
    </div>
  </div>
</section>