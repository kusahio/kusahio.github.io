---
import { CV } from "@/data/cv";
import SkillPill from "../ui/SkillPill.astro";

const { skills } = CV;
---

<section id="techstack"
  class="w-full flex justify-center px-6 md:px-12 lg:px-24 py-24 overflow-hidden bg-brand-yellow"
>
  <div class="w-full max-w-7xl flex flex-col gap-8">
    <h2 class="text-center md:text-left font-display text-4xl md:text-5xl uppercase text-brand-black">{skills.title}</h2>
    <div class="w-full flex flex-row justify-center md:justify-start flex-wrap py-4 gap-6">
      {skills.skillSet.map((skill, i) => (
        <SkillPill 
          name={skill.name}
          icon={skill.icon}
          index={i}
        />
      ))}
    </div>
  </div>
</section>