---
import { CV } from "@/data/cv";

const { header } = CV;
---

<section
  class="w-full max-h-[238] flex justify-center px-6 md:px-12 lg:px-24 py-24 overflow-hidden bg-brand-bg"
>
  <div class="relative w-full max-w-7xl flex flex-col">
    <div class="mb-6 animate-fade-in-up">
      <span
        class="inline-block bg-brand-red text-white font-black py-4 px-2 text-xs md:text-sm
    uppercase tracking-widest transform -skew-x-12 border-2 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]"
      >
        <span class="block transform skew-x-12">
          {header.role}
        </span>
      </span>
    </div>

    <div class="relative z-10 max-w-5xl">
      <h1
        class="font-black text-6xl md:text-8xl lg:text-9xl leading[0.9] uppercase text-black"
      >
        {header.fullName.name}<br />
        <span class="text-brand-red">{header.fullName.lastname}</span>
      </h1>
      <h2
        class="font-bold text-xl md:text-2xl lg:text-3xl leading[0.9] text-gray-950 max-w-125"
      >
        {header.tagline}
      </h2>

      <div
        class="flex mt-4 md:mt-0 md:absolute md:top-5 md:right-0 lg:-right-32 flex-col items-center justify-center
                w-24 h-24 md:w-48 md:h-48 bg-brand-yellow
                border-4 border-black rotate-12
                shadow-[8px_8px_0px_0px_rgba(0,0,0,1)]
                hover:rotate-6 hover:scale-110 transition-all duration-300 cursor-pointer"
      >
        <span class="font-black text-3xl md:text-5xl leading-none text-black">
          {header.yearsExperience}
        </span>
        <span
          class="font-bold text-xs uppercase text-center leading-tight mt-1 text-black"
        >
          AÃ±os de<br />Experiencia
        </span>
      </div>
    </div>

    <div
      class="absolute inset-0 -z-10 opacity-[0.03]"
      style="background-image: radial-gradient(#000 1px, transparent 1px); background-size: 20px 20px;"
    >
    </div>
  </div>
</section>
