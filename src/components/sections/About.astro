---
import { CV } from "@/data/cv";
import { Image } from "astro:assets";
import profileImage from "@/assets/yo.webp";

const { about, header } = CV;
---

<section
  class="relative w-full flex justify-center items-center px-6 md:px-12 lg:px-24 py-24 bg-brand-black"
>
  <div class="relative w-full max-w-7xl flex flex-col md:flex-row md:items-center gap-16 md:gap-32 items-center">
    <div class="w-full md:w-auto flex justify-center items-center md:justify-start">
      <Image
        src={profileImage}
        
        alt={`Foto de perfil de ${header.fullName.name} ${header.fullName.lastname}`}
        class="w-64 md:w-80 aspect-square object-cover shadow-[12px_12px_0px_0px_var(--color-brand-yellow)]"
      />
    </div>
    <div class="w-full md:w-2/3 flex flex-col justify-center gap-4">
      <h2 class="font-display text-4xl md:text-5xl uppercase text-white">
        {about.title}
      </h2>
      <div class="w-24 h-2 bg-brand-yellow mb-1"></div>
      <p class="text-lg md:text-lg font-light leading-relaxed text-gray-300 selection:text-brand-black">
        {about.description}
      </p>
    </div>
  </div>
</section>
